<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitapTakipMaui.Views.BookDetailPage"
             Title="Kitap Detayı">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Başlık:" />
        <Label Text="{Binding BookDetails.Title}" />
        <Label Text="Yazar:" />
        <Label Text="{Binding BookDetails.Author}" />
        <Label Text="Notlar:" />
        <Label Text="{Binding BookDetails.Notes}" />
        <Label Text="Açıklama:" />
        <Label Text="{Binding BookDetails.Description}" />
        <Label Text="Sayfa Sayısı:" />
        <Label Text="{Binding BookDetails.PageCount}" />
        <Button Text="Düzenle" Command="{Binding NavigateToEditBookCommand}" />
        <Button Text="Sil" Command="{Binding DeleteBookCommand}" />
    </VerticalStackLayout>
</ContentPage>