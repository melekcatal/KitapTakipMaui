<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitapTakipMaui.Views.LoginPage"
             Title="Giriş">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Kullanıcı Adı" />
        <Entry Text="{Binding LoginModel.Username}" />
        <Label Text="Şifre" />
        <Entry Text="{Binding LoginModel.Password}" IsPassword="True" />
        <Button Text="Giriş Yap" Command="{Binding LoginCommand}" />
        <Button Text="Kayıt Ol" Command="{Binding NavigateToRegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>